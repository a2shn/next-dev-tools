{
  "compilerOptions": {
    "esModuleInterop": true,
        "skipLibCheck": true,
            "target": "es2022",
                "verbatimModuleSyntax": true,
                    "allowJs": true,
                        "resolveJsonModule": true,
                            "moduleDetection": "force",
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "lib": ["es2022"]
  }
} 
